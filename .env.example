# Server
PORT=4000
NODE_ENV=development

# Optional LLM provider keys
ANTHROPIC_API_KEY=
# Optional auth token for Claude Code CLI (headless/container usage)
ANTHROPIC_AUTH_TOKEN=
OPENAI_API_KEY=
GOOGLE_API_KEY=

# Optional Claude SDK WebSocket bridge (Claude Code CLI)
ENABLE_CLAUDE_SDK_BRIDGE=false
CLAUDE_SDK_CLI_PATH=claude
CLAUDE_SDK_LOCAL_HOST=127.0.0.1

# Claude Code provider (subscription-backed, no API key)
ENABLE_CLAUDE_CODE_PROVIDER=true
CLAUDE_CODE_CLI_PATH=claude
CLAUDE_CODE_TIMEOUT_MS=45000
# Optional: Claude subscription/OAuth token for headless usage
CLAUDE_CODE_OAUTH_TOKEN=
# Legacy alias (still accepted)
CLAUDE_CODE_AUTH_TOKEN=
# Default avoids user-level hooks that may break non-interactive runs
CLAUDE_CODE_SETTING_SOURCES=project,local

# Frontend
VITE_USE_WASM_CORE=true
# Show provider/model debug labels in Chat + QuickDx
VITE_SHOW_PROVIDER_DEBUG=true

# Docker runtime (optional)
KUBEAGENTIX_PROXY_LOCALHOST_KUBECONFIG=true

# Incident external sync (Phase 3: Jira + Slack hybrid SoR)
# Modes: mock | webhook | disabled
INCIDENT_JIRA_SYNC_MODE=mock
INCIDENT_SLACK_SYNC_MODE=mock
# Used only when mode=webhook
INCIDENT_JIRA_WEBHOOK_URL=
INCIDENT_SLACK_WEBHOOK_URL=
# Optional base URLs used for mock URL generation
INCIDENT_JIRA_BASE_URL=
INCIDENT_SLACK_BASE_URL=
INCIDENT_SYNC_TIMEOUT_MS=8000

# Incident layered graph enrichment
# live: execute kubectl-based graph enrichment
# mock: fast local/testing stub mode
INCIDENT_GRAPH_MODE=live

# Observability connector (Phase 5)
# disabled | mock | file
INCIDENT_OBSERVABILITY_MODE=disabled
# Used when INCIDENT_OBSERVABILITY_MODE=file
INCIDENT_OBSERVABILITY_FILE=
