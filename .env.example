# Server
PORT=4000
NODE_ENV=development

# Optional LLM provider keys
ANTHROPIC_API_KEY=
# Optional auth token for Claude Code CLI (headless/container usage)
ANTHROPIC_AUTH_TOKEN=
OPENAI_API_KEY=
GOOGLE_API_KEY=

# Optional Claude SDK WebSocket bridge (Claude Code CLI)
ENABLE_CLAUDE_SDK_BRIDGE=false
CLAUDE_SDK_CLI_PATH=claude
CLAUDE_SDK_LOCAL_HOST=127.0.0.1

# Claude Code provider (subscription-backed, no API key)
ENABLE_CLAUDE_CODE_PROVIDER=true
CLAUDE_CODE_CLI_PATH=claude
CLAUDE_CODE_TIMEOUT_MS=45000
# Optional: overrides ANTHROPIC_AUTH_TOKEN when set
CLAUDE_CODE_AUTH_TOKEN=
# Default avoids user-level hooks that may break non-interactive runs
CLAUDE_CODE_SETTING_SOURCES=project,local

# Frontend
VITE_USE_WASM_CORE=true
# Show provider/model debug labels in Chat + QuickDx
VITE_SHOW_PROVIDER_DEBUG=true

# Docker runtime (optional)
KUBEAGENTIX_PROXY_LOCALHOST_KUBECONFIG=true
